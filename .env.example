# ==============================================
# COACHFLOW - Environment Variables
# ==============================================
# Copy this file to .env and update with your values
#
# NOTE: This is the only .env file for the entire project.
# Both backend and frontend will use these variables.
# ==============================================

# ----------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------
DB_HOST=localhost  
DB_PORT=5432  
DB_USERNAME=postgres  
DB_PASSWORD=1StrongPwd!  
DB_DATABASE=CoachFlow_DEV  

# ----------------------------------------------
# BACKEND APPLICATION CONFIGURATION
# ----------------------------------------------
NODE_ENV=development
PORT=3000
OPEN_API_AVAIBLE=1

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# ----------------------------------------------
# JWT / AUTHENTICATION CONFIGURATION
# ----------------------------------------------
JWT_ACCESS_SECRET=your_jwt_access_secret_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_this_in_production
JWT_ACCESS_EXPIRATION_TIME=30m
JWT_REFRESH_EXPIRATION_TIME=7d

# ----------------------------------------------
# FRONTEND CONFIGURATION
# ----------------------------------------------
# API URL for frontend (use /api for production with nginx proxy)
VITE_API_URL=http://localhost:3000/api